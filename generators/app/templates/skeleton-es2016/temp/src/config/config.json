{
  "name": "<%= main.appName %>",
<% if (plugins.list.includes('aurelia-i18n')) { -%>
  "i18n": {
    "backend": {
      "loadPath": "/locales/{{lng}}/{{ns}}.json"
    },
    "lng" : "<%= plugins.i18n_languages[0] %>",
    "attributes" : ["t","i18n"],
    "fallbackLng" : "<%= plugins.i18n_languages[1] %>",
    "debug" : false,
    "namespaces": ["translation","nav"],
    "defaultNs": "translation"
  },
<% } -%>
<% if (plugins.list.includes('aurelia-notification')) { -%>
  "notification": {
    "translate": true,
    "notifications": {
      "success": "humane-libnotify-success",
      "error": "humane-libnotify-error",
      "info": "humane-libnotify-info"
    }
  },
<% } -%>
<% if (plugins.list.includes('aurelia-google-analytics')) { -%>
  "google-analytics": {
    "tracking-id": "<%= plugins.googleanalytics_id %>",
    "config": {
      "logging": {
        "enabled": true
      },
      "pageTracking": {
        "enabled": false
      },
      "clickTracking": {
        "enabled": false
      }
    }
  },
<% } -%>
<% if (plugins.list.includes('aurelia-auth')) { -%>
  "auth": {
    "providers": {
<% plugins.auth_providers.forEach(function(provider, index, providers){ -%>
      "<%= provider %>": "<%= plugins.auth[provider][1] %>"<% if (!(index === providers.length - 1)) { %>,<% } %>
<% }); -%>
    }
  },
<% } -%>
  "development": {
    "env": "development"
  },
  "staging": {
    "env": "staging"
  },
  "production": {
<% if (plugins.list.includes('aurelia-google-analytics')) { -%>
    "google-analytics": {
      "config": {
        "logging": {
          "enabled": false
        },
        "pageTracking": {
          "enabled": true
        },
        "clickTracking": {
          "enabled": true
        }
      }
    },
<% } -%>
<% if (plugins.list.includes('aurelia-auth')) { -%>
      "auth": {
        "providers": {
<% plugins.auth_providers.forEach(function(provider, index, providers){ -%>
          "<%= provider %>": "<%= plugins.auth[provider][0] %>"<% if (!(index === providers.length - 1)) { %>,<% } %>
<% }); -%>
        }
      },
<% } -%>
    "env": "production"
  }
}
